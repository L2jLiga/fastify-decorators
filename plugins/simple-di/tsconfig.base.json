{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2019"],

    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "fastify-decorators": ["../../dist/fastify-decorators"],
      "fastify-decorators/*": ["../../dist/fastify-decorators/*"]
    },

    "esModuleInterop": true,

    "strict": true,

    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
