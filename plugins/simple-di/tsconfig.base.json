{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    "paths": {
      "fastify-decorators": ["../../dist/fastify-decorators"],
      "fastify-decorators/*": ["../../dist/fastify-decorators/*"]
    },

    "esModuleInterop": true,

    "strict": true,

    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
